generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id               String    @id @default(cuid())
  slug             String    @unique
  name             String
  description      String    @db.Text
  heroImage        String // URL to hero image
  accentColorClass String // Tailwind color class
  order            Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  products         Product[]

  @@index([slug])
  @@index([order])
}

model Product {
  id                String        @id @default(cuid())
  slug              String        @unique
  name              String
  description       String        @db.Text
  price             Float
  salePrice         Float?
  currency          String        @default("INR")
  categoryId        String
  category          Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  tags              String[]      // Array of tags
  
  flags             String[]      @default([])
  
  rating            Float         @default(0)
  reviewsCount      Int           @default(0)
  images            String[]      // Array of image URLs
  thumbnail         String        // Main product image URL
  sizes             String[]      // Available sizes
  colors            String[]      // Available colors
  stock             Int           @default(0)
  sku               String?       @unique // Stock Keeping Unit
  lowStockThreshold Int           @default(10) // Alert when stock falls below this
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  reviews           Review[]

  @@index([slug])
  @@index([categoryId])
  @@index([createdAt])
  @@index([stock])
}

model Review {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  rating     Int // 1-5
  title      String?
  comment    String?  @db.Text
  userName   String // Store name in case user is deleted
  isVerified Boolean  @default(false) // Verified purchase
  isApproved Boolean  @default(true) // Admin can moderate reviews
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([rating])
  @@index([createdAt])
  @@index([isApproved])
}

model Cart {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     Json // CartItem[]
  version   Int      @default(1) // For optimistic locking
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model User {
  id              String     @id @default(cuid())
  name            String?
  email           String?    @unique
  emailVerified   DateTime?  // Keep this for NextAuth compatibility
  isEmailVerified Boolean    @default(false) // Our custom field
  mobile          String?    @unique
  passwordHash    String?
  role            String     @default("USER")
  isBlocked       Boolean    @default(false)
  lastActiveAt    DateTime   @default(now())
  profile         Profile?
  cart            Cart?
  orders          Order[]
  reviews         Review[]
  adminLogs       AdminLog[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  accounts Account[]
  sessions Session[]

  @@index([role])
  @@index([isBlocked])
  @@index([lastActiveAt])
  @@index([isEmailVerified])
}

model Profile {
  id         String  @id @default(cuid())
  user       User    @relation(fields: [userId], references: [id])
  userId     String  @unique
  addresses  Json? // address[] as JSON block
  profilePic String? // URL to avatar image
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id                String    @id @default(cuid())
  code              String    @unique // e.g., BB-1001
  userId            String?   // null for guest orders
  user              User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  items             Json      // CartItem[]
  totals            Json      // CartTotals { subtotal, discount, total }
  status            String    @default("processing") // processing, packed, shipped, delivered
  address           Json      // OrderAddress
  notes             String?   @db.Text

  // Payment fields
  paymentMethod     String?   // razorpay
  paymentStatus     String?   @default("pending") // pending, paid, failed
  paymentId         String?   // Razorpay payment ID

  // Shipping provider relationship
  shippingProviderId String?
  shippingProvider   ShippingProvider? @relation(fields: [shippingProviderId], references: [id], onDelete: SetNull)
  
  // Tracking information
  trackingNumber     String?   // AWB number from courier
  courierName        String?   // Actual courier company (e.g., "BlueDart Surface")
  trackingUrl        String?   // Direct URL to track shipment
  
  // Package details
  shippingCost       Float     @default(0) // Shipping charges in INR
  packageWeight      Float?    // Weight in kg
  packageDimensions  Json?     // {length, width, height} in cm
  
  // Shipment status tracking
  shipmentStatus     String?   // Current shipment status (normalized)
  lastStatusUpdate   DateTime? // When status was last updated
  deliveredAt        DateTime? // Actual delivery timestamp
  
  // Metadata & documents
  shippingMeta       Json?     // Provider-specific data (labels, invoices, etc.)
  
  estimatedDelivery  DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  
  // Relations
  shippingEvents     ShippingEvent[]

  @@index([userId])
  @@index([code])
  @@index([createdAt])
  @@index([status])
  @@index([paymentStatus])
  @@index([shippingProviderId])
  @@index([trackingNumber])
  @@index([shipmentStatus])
}

// Stores configuration for each shipping provider (Shiprocket, Delhivery, etc.)
model ShippingProvider {
  id              String   @id @default(cuid())
  code            String   @unique // 'shiprocket', 'delhivery', 'bluedart', etc.
  name            String   // Display name: "Shiprocket", "Delhivery"
  description     String?  @db.Text // Provider description
  isEnabled       Boolean  @default(false) // Toggle provider on/off
  priority        Int      @default(0) // Higher number = higher priority
  
  // API Configuration (encrypted/secured in production)
  config          Json     // {apiKey, apiSecret, warehouseId, etc.}
  
  // Capabilities
  supportedModes  String[] // ['prepaid', 'cod', 'express']
  features        Json?    // {tracking: true, label: true, scheduling: true}
  
  // Service areas
  serviceablePincodes String[] @default([]) // Empty = all India
  
  // Metadata
  logoUrl         String?  // Provider logo
  websiteUrl      String?  // Provider website
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  orders          Order[]
  rateCache       ShippingRateCache[]
  events          ShippingEvent[]

  @@index([isEnabled, priority])
  @@index([code])
}

// Caches shipping rates to reduce API calls and improve performance
model ShippingRateCache {
  id              String   @id @default(cuid())
  
  // Provider reference
  providerId      String
  provider        ShippingProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  
  // Rate calculation parameters
  fromPincode     String
  toPincode       String
  weight          Float    // in kg
  mode            String   // 'prepaid', 'cod'
  
  // Cached rate information
  rate            Float    // Shipping cost in INR
  courierName     String   // Courier service name
  estimatedDays   Int      // Estimated delivery days
  
  // Additional metadata
  metadata        Json?    // Any additional provider-specific data
  
  // Cache management
  expiresAt       DateTime // When this cache entry expires
  createdAt       DateTime @default(now())

  @@unique([providerId, fromPincode, toPincode, weight, mode])
  @@index([expiresAt])
  @@index([fromPincode])
  @@index([toPincode])
}

// Tracks all shipping-related events for debugging and analytics
model ShippingEvent {
  id              String   @id @default(cuid())
  
  // Order reference
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Provider reference
  providerId      String
  provider        ShippingProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  
  // Event details
  eventType       String   // 'rate_check', 'shipment_created', 'status_update', 'cancellation'
  status          String   // 'success', 'failed', 'pending'
  
  // Request/Response logging (for debugging)
  request         Json?    // API request payload
  response        Json?    // API response
  
  // Error tracking
  errorMessage    String?  @db.Text
  errorCode       String?
  
  // Metadata
  metadata        Json?    // Additional context
  
  createdAt       DateTime @default(now())

  @@index([orderId])
  @@index([providerId])
  @@index([eventType])
  @@index([status])
  @@index([createdAt])
}

// Admin activity logging
model AdminLog {
  id         String   @id @default(cuid())
  adminId    String
  admin      User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  action     String // e.g., "USER_BLOCKED", "PRODUCT_UPDATED"
  resource   String // e.g., "User", "Product", "Order"
  resourceId String // ID of the affected resource
  metadata   Json? // Additional details about the action
  createdAt  DateTime @default(now())

  @@index([adminId])
  @@index([createdAt])
  @@index([resource])
  @@index([action])
}
