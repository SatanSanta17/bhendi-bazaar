generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id               String    @id @default(cuid())
  slug             String    @unique
  name             String
  description      String    @db.Text
  heroImage        String // URL to hero image
  accentColorClass String // Tailwind color class
  order            Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  products         Product[]

  @@index([slug])
  @@index([order])
}

model Product {
  id                String        @id @default(cuid())
  slug              String        @unique
  name              String
  description       String        @db.Text
  price             Float
  salePrice         Float?
  currency          String        @default("INR")
  categoryId        String
  category          Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  tags              String[]      // Array of tags
  
  flags             String[] @default([])
  
  rating            Float         @default(0)
  reviewsCount      Int           @default(0)
  images            String[]      // Array of image URLs
  thumbnail         String        // Main product image URL
  sizes             String[]      // Available sizes
  colors            String[]      // Available colors
  stock             Int           @default(0)
  sku               String?       @unique // Stock Keeping Unit
  lowStockThreshold Int           @default(10) // Alert when stock falls below this
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  reviews           Review[]

  @@index([slug])
  @@index([categoryId])
  @@index([createdAt])
  @@index([stock])
}

model Review {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  rating     Int // 1-5
  title      String?
  comment    String?  @db.Text
  userName   String // Store name in case user is deleted
  isVerified Boolean  @default(false) // Verified purchase
  isApproved Boolean  @default(true) // Admin can moderate reviews
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([rating])
  @@index([createdAt])
  @@index([isApproved])
}

model Cart {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     Json // CartItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model User {
  id           String     @id @default(cuid())
  name         String?
  email        String?    @unique
  mobile       String?    @unique
  passwordHash String? // for credentials-based auth
  role         String     @default("USER") // USER, ADMIN
  isBlocked    Boolean    @default(false) // Admin can block users
  lastActiveAt DateTime   @default(now())
  profile      Profile?
  cart         Cart?
  orders       Order[]
  reviews      Review[]
  adminLogs    AdminLog[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  accounts Account[]
  sessions Session[]

  @@index([role])
  @@index([isBlocked])
  @@index([lastActiveAt])
}

model Profile {
  id         String  @id @default(cuid())
  user       User    @relation(fields: [userId], references: [id])
  userId     String  @unique
  addresses  Json? // address[] as JSON block
  profilePic String? // URL to avatar image
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id                String    @id @default(cuid())
  code              String    @unique // e.g., BB-1001
  userId            String? // null for guest orders
  user              User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  items             Json // CartItem[]
  totals            Json // CartTotals { subtotal, discount, total }
  status            String    @default("processing") // processing, packed, shipped, delivered
  address           Json // OrderAddress
  notes             String?   @db.Text
  paymentMethod     String? // razorpay
  paymentStatus     String?   @default("pending") // pending, paid, failed
  paymentId         String? // Razorpay payment ID
  estimatedDelivery DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([userId])
  @@index([code])
  @@index([createdAt])
  @@index([status])
  @@index([paymentStatus])
}

// Admin activity logging
model AdminLog {
  id         String   @id @default(cuid())
  adminId    String
  admin      User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  action     String // e.g., "USER_BLOCKED", "PRODUCT_UPDATED"
  resource   String // e.g., "User", "Product", "Order"
  resourceId String // ID of the affected resource
  metadata   Json? // Additional details about the action
  createdAt  DateTime @default(now())

  @@index([adminId])
  @@index([createdAt])
  @@index([resource])
  @@index([action])
}
